public class EmailHelper {
    
    public static Map<Id, String> setRecordLinkHtml(Map<Id, Set<sObject>> ownerRecordMap, String templateName){
        
        EmailTemplate temp = [SELECT Id,  HtmlValue FROM EmailTemplate WHERE DeveloperName = :templateName];
        
        
        Map<Id, String> ownerHtmlMap = new Map<Id, String>(); 
            
        for (id ownerId : ownerRecordMap.keySet()){
            
            Set<sObject> records = OwnerRecordMap.get(ownerId);
            
            Set<String> recLinks = new Set<String>();
            for (sObject rec : records){
                String recName = (String)rec.get('Name');
                String recId = (String)rec.get('Id');
                recLinks.add('<a href="http://goguardian.my.salesforce.com/'+recId+'">'+recName+'</a><br/>');
        	}
            
        String html = temp.HtmlValue;
        String recLinksStr = String.join(new List<String>(recLinks), '');
        html = html.replace('{{RecordLinks}}', recLinksStr);
        ownerHtmlMap.put(ownerId, html);
            
    	}
    	return ownerHtmlMap;
        
    }
}